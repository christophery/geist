{
    "name": "geist",
    "description": "Geist is a personal blogging theme for WordPress. This theme is a port of Casper the default theme for the Ghost blogging platform.",
    "demo": "https://chrisyee.ca",
    "version": "1.0.0",
    "license": "GPL3",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Chris Yee",
        "url": "https://chrisyee.ca"
    },
    "devDependencies": {
        "@tryghost/release-utils": "0.3.1",
        "autoprefixer": "9.5.0",
        "beeper": "1.1.1",
        "cssnano": "4.1.10",
        "gscan": "2.3.0",
        "gulp": "4.0.0",
        "gulp-livereload": "4.0.1",
        "gulp-postcss": "8.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "4.2.0",
        "postcss-color-function": "4.0.1",
        "postcss-custom-properties": "8.0.9",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0"
    }
}
